<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="triangle" class="com.javabrains.tutorial22.Triangle">
		<property name="pointA" ref="zeroPoint" />
		<property name="pointB" ref="point2" />
		<property name="pointC" ref="point3" />
	</bean>
	<bean id="zeroPoint" class="com.javabrains.tutorial22.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>
	<bean id="point2" class="com.javabrains.tutorial22.Point">
		<property name="x" value="-20" />
		<property name="y" value="0" />
	</bean>
	<bean id="point3" class="com.javabrains.tutorial22.Point">
		<property name="x" value="0" />
		<property name="y" value="20" />
	</bean>
	<bean id="circle" class="com.javabrains.tutorial22.Circle">
		<property name="center">
			<bean class="com.javabrains.tutorial22.Point">
				<property name="x" value="0" />
				<property name="y" value="0" />
			</bean>
		</property>
	</bean>

	<bean id="messageSource"
		class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>messages</value>
			</list>
		</property>
	</bean>
</beans>